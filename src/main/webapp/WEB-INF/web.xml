<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>moffat-bay</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>

  
  <!-- LoginServlet Configuration -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.moffatbay.servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- RegistrationServlet Configuration -->
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.moffatbay.servlets.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <!-- ReservastionServlet Configuration  -->
  <servlet>
  <servlet-name>ReservationServlet</servlet-name>
  <servlet-class>com.moffatbay.servlets.ReservationServlet</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>ReservationServlet</servlet-name>
  <url-pattern>/ReservationServlet</url-pattern>
</servlet-mapping>

<!-- ReservationSummaryServlet Configuration -->
<servlet>
  <servlet-name>ReservationSummaryServlet</servlet-name>
  <servlet-class>com.moffatbay.servlets.ReservationSummaryServlet</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>ReservationSummaryServlet</servlet-name>
  <url-pattern>/ReservationSummaryServlet</url-pattern>
</servlet-mapping>

<!-- REservationLookupServlet Configuration -->

<servlet>
  <servlet-name>ReservationLookupServlet</servlet-name>
  <servlet-class>com.moffatbay.servlets.ReservationLookupServlet</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>ReservationLookupServlet</servlet-name>
  <url-pattern>/ReservationLookupServlet</url-pattern>
</servlet-mapping>

<!-- AttractionsServlet Configuration -->
<servlet>
  <servlet-name>AttractionsServlet</servlet-name>
  <servlet-class>com.moffatbay.servlets.AttractionsServlet</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>AttractionsServlet</servlet-name>
  <url-pattern>/AttractionsServlet</url-pattern>
</servlet-mapping>
</web-app>